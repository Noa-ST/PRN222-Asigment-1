@model BusinessObjects.DTOs.UpdateCategoryDto

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
}

<div class="container mt-4">
    <h2 class="text-center text-warning mb-4">
        <i class="fa-solid fa-pen-to-square"></i> Chỉnh sửa danh mục
    </h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="ID" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="fa-solid fa-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-rotate"></i> Cập nhật
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
}
