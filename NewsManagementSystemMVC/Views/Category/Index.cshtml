@model IEnumerable<BusinessObjects.DTOs.GetCategoryDto>
@{
    ViewData["Title"] = "Category";
}

<div class="container mt-4">
    <h1 class="text-center text-primary mb-4"><i class="fa-solid fa-list"></i> Danh sách danh mục</h1>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fa-solid fa-plus"></i> Tạo mới
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-bordered table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 70%;">Tên danh mục</th>
                        <th style="width: 30%;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="2" class="text-center text-muted">Không có danh mục nào.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-warning me-1">
                                        <i class="fa-solid fa-pen-to-square"></i> Sửa
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">
                                        <i class="fa-solid fa-trash"></i> Xoá
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
}

