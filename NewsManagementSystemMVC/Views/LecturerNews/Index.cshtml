@model List<BusinessObjects.Entities.NewsArticle>

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Danh sách bài viết đang hoạt động</h2>

    <table class="table table-striped table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Tiêu đề</th>
                <th>Danh mục</th>
                <th>Ngày tạo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in Model)
            {
                <tr>
                    <td class="fw-semibold">@article.Title</td>
                    <td>@article.Category?.Name ?? "<i>Chưa có danh mục</i>"</td>
                    <td>@article.CreatedDate.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

