@model IEnumerable<BusinessObjects.DTOs.GetNewsArticleDto>
@{
    ViewData["Title"] = "Bài viết tin tức";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">
        <i class="fa-solid fa-newspaper"></i> Danh sách bài viết
    </h2>

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-success">
            <i class="fa-solid fa-plus"></i> Thêm mới
        </a>
    </div>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Tiêu đề</th>
                <th>Danh mục</th>
                <th>Ngày tạo</th>
                <th>Trạng thái</th>
                <th class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.CategoryName</td>
                    <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        <span class="badge @(item.NewsStatus == 1 ? "bg-success" : "bg-secondary")">
                            @item.NewsStatus
                        </span>
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-warning me-1">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @* Pagination *@
    @if (ViewBag.TotalPages != null && ViewBag.CurrentPage != null)
    {
        <nav>
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
}
