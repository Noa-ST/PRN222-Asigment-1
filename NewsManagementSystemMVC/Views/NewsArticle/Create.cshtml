@using BusinessObjects.Enums
@model BusinessObjects.DTOs.CreateNewsArticleDto

@{
    ViewData["Title"] = "Tạo bài viết";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">
        <i class="fa-solid fa-circle-plus"></i> Tạo bài viết mới
    </h2>

    <form asp-action="Create" method="post" class="shadow p-4 bg-light rounded">
        <input type="hidden" asp-for="CreatedByID" value="1" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label">Tiêu đề</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Content" class="form-label">Nội dung</label>
            <textarea asp-for="Content" class="form-control" rows="6"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryID" class="form-label">Danh mục</label>
            @Html.DropDownListFor(model => model.CategoryID, (List<SelectListItem>)ViewBag.Categories, "-- Chọn danh mục --", new { @class = "form-select" })
        </div>

        <div class="mb-3">
            <label asp-for="NewsStatus" class="form-label">Trạng thái</label>
            <select asp-for="NewsStatus" class="form-select" asp-items="Html.GetEnumSelectList<NewsStatus>()"></select>
        </div>

        <div class="mb-3">
            <label class="form-label">Tags</label>
            <select asp-for="TaqIDs" class="form-select" multiple asp-items="ViewBag.Taqs"></select>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-floppy-disk"></i> Tạo mới
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
    </form>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
}
