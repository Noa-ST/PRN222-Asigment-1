@model BusinessObjects.DTOs.GetNewsArticleDto

@{
    ViewData["Title"] = "Xóa bài viết";
}

<div class="container mt-5">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h3><i class="fa-solid fa-triangle-exclamation"></i> Xác nhận xóa bài viết</h3>
        </div>
        <div class="card-body">
            <p class="fs-5">Bạn có chắc chắn muốn xóa bài viết sau không?</p>
            <hr />
            <h5 class="text-primary">@Model.Title</h5>
            <p class="text-muted">@Model.Content</p>

            <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                <input type="hidden" asp-for="ID" />

                <button type="submit" class="btn btn-danger">
                    <i class="fa-solid fa-trash-can"></i> Xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="fa-solid fa-arrow-left"></i> Hủy
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
}
