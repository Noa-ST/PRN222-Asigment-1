@model BusinessObjects.DTOs.UpdateTaqDto

@{
    ViewData["Title"] = "Chỉnh sửa Tag";
}

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="text-center text-primary mb-4">@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" novalidate>
        <input type="hidden" asp-for="ID" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Tên Tag</label>
            <input asp-for="Name" class="form-control" placeholder="Nhập tên tag" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Lưu thay đổi
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

