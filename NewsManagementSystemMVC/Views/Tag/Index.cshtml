@model IEnumerable<BusinessObjects.DTOs.GetTaqDto>

@{
    ViewData["Title"] = "Tag List";
}

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">Danh sách Tag</h2>

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm mới Tag
        </a>
    </div>

    <table class="table table-bordered table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th style="width: 80px;">ID</th>
                <th>Tên Tag</th>
                <th style="width: 180px;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var taq in Model)
            {
                <tr>
                    <td>@taq.ID</td>
                    <td>@taq.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@taq.ID" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i> Sửa
                        </a>
                        <a asp-action="Delete" asp-route-id="@taq.ID" class="btn btn-sm btn-danger"
                           onclick="return confirm('Bạn có chắc chắn muốn xóa tag này không?');">
                            <i class="bi bi-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

