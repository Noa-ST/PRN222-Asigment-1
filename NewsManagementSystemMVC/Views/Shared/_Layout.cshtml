@using Microsoft.AspNetCore.Http
@{
    var userEmail = Context.Session.GetString("UserEmail");
    var userFullName = Context.Session.GetString("UserFullName");
    var userRole = Context.Session.GetString("UserRole");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewsManagementSystemMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NewsManagementSystemMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-newspaper"></i> FUNews
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>

                        @if (userRole == "Admin")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Quản lý</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="SystemAccount" asp-action="Index">Tài khoản</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Report">Báo cáo</a></li>
                                </ul>
                            </li>
                        }
                        else if (userRole == "Lecturer")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="LecturerNews" asp-action="Index">Xem bài viết</a>
                            </li>
                        }
                        else if (userRole == "Staff")
                        {
                            <li class="nav-item dropdown"> 
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Quản lý</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Category" asp-action="Index">Danh mục</a></li>
                                    <li><a class="dropdown-item" asp-controller="NewsArticle" asp-action="Index">Bài viết</a></li>
                                    <li><a class="dropdown-item" asp-controller="Tag" asp-action="Index">Thẻ</a></li>
                                </ul>
                            </li>
                        }

                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (!string.IsNullOrEmpty(userEmail))
                        {
                            <li class="nav-item d-flex align-items-center me-2 text-white">
                                <i class="fa-solid fa-user-circle me-1"></i>
                                <span class="text-white">Xin chào, <strong>@userFullName</strong> (@userRole)</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Login" asp-action="Logout">
                                    <i class="fa-solid fa-right-from-bracket"></i> Đăng xuất
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-success" asp-controller="Login" asp-action="Login">
                                    <i class="fa-solid fa-right-to-bracket"></i> Đăng nhập
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-center text-muted py-3 bg-light mt-4">
        <div class="container">
            &copy; 2025 - NewsManagementSystemMVC | <a asp-controller="Home" asp-action="Privacy">Chính sách</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
